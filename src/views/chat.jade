extends layout

block content
	#top
		h1 Web Fundamentals Project - Chat page
		p Uses Express and Socket.IO.
		p 
			a(href='/leaderboard') Leaderboard
		p
			a(href='/game', target='blank_') Game
		p You can use any name while chatting.
		#messages
			.yourname
			p #{user}
			div
				input#name(name='name', type='text')
				br
				textarea#message
				br
				input#send(type='submit', value='Send message')
				script(type='text/javascript')
					$(document).ready(function() {
						Chatting.initialize('http://localhost/');
					});
			form(method='post', action='/logout')
				button(type='submit') Logout

